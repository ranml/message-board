<link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href='/stylesheets/login.css'>
<div id="login" class="container">
  <div class="row-fluid">
    <div class="col-md-12">
      <div class="login well well-small">
        <div class="center">
          <img src="http://placehold.it/250x100&text=Logo" alt="logo"> 
        </div>
        <form action="/users/login" style="" class="login-form" id="UserLoginForm" method="post" accept-charset="utf-8">  
         <div class="form-group">
               <p class="bg-danger">{{msg}}</p>
           </div>
            <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">  
                            <i class="glyphicon glyphicon-user"></i>        
                        </div>
                        <input type="text" name="username" class="form-control" required="required" placeholder="用户名" maxlength="255" type="text" id="UserUsername">
                    </div>
            </div>
            <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">  
                            <i class="glyphicon glyphicon-lock"></i>        
                        </div>
                        <input type="password" name="password" required="required" class="form-control" placeholder="密码" id="UserPassword">
                    </div>
            </div>
          
          <div class="form-group">
            <input class="btn btn-primary btn-large btn-block" type="submit" value="登录"> 
          </div>
          <div class="form-group text-right">
                <a href="/users/register">还没注册？</a>
          </div>
        </form>
      </div><!--/.login-->
    </div><!--/.span12-->
  </div><!--/.row-fluid-->
</div><!--/.container-->

